<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    tools:context=".retailer.retailerLoginPage.RetailerSignUpPage">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/retailerSignupButton"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signup_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Signup"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/create_an_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Create an Account to get Started"
                app:layout_constraintTop_toBottomOf="@id/signup_tv" />

            <TextView
                android:id="@+id/tv_storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Store Name"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/create_an_account_tv" />

            <EditText
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Store Name"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_storeName" />

            <TextView
                android:id="@+id/tv_storeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Store Number"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/store_name" />

            <EditText
                android:id="@+id/storeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Store Number "
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_storeNumber" />

            <TextView
                android:id="@+id/tv_ownerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Owner Name"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/storeNumber" />

            <EditText
                android:id="@+id/owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Owner Name"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_ownerName" />

            <TextView
                android:id="@+id/tv_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Contact Number"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/owner_name" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Contact Number"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_contact_number" />

            <TextView
                android:id="@+id/tv_inviteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Invite Code"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/contactNumber" />

            <EditText
                android:id="@+id/inviteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Invite Code"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_inviteCode" />

            <TextView
                android:id="@+id/tv_emailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email Address"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/inviteCode" />

            <EditText
                android:id="@+id/emailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Email Address"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_emailAddress" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/emailAddress" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Password"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_password" />

            <TextView
                android:id="@+id/tv_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Confirm Password"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/password" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Enter Confirm Password"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_confirmPassword" />

            <CheckBox
                android:id="@+id/signup_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmPassword" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="I've read and agree with the Terms and "
                app:layout_constraintStart_toEndOf="@+id/signup_checkbox"
                app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Conditions and the Privacy Policy."
                app:layout_constraintStart_toEndOf="@+id/signup_checkbox"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retailerSignupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>